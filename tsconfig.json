{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@customtypes/*": ["types/*"],
      "@routes/*": ["routes/*"],
      "@screens/*": ["components/screens/*"],
      "@theme": ["constants/theme"],
    }
  },
  "exclude": [
    "babel.config.js", "jest.config.js", "metro.config.js", "node_modules"
  ]
}